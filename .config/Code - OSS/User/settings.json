{
    "window.zoomLevel": 1.2,
    "workbench.colorCustomizations": {
        "workbench.background": "#21212166",
        "editorCursor.foreground": "#00ffbf",
        "editor.lineHighlightBackground": "#10101066",
		"editor.background": "#21212148",
		"activityBar.background": "#21212166",
		"tab.activeBackground": "#21212166",
		"tab.inactiveBackground": "#21212166",
		"titleBar.activeBackground": "#21212166",
		"sideBar.background": "#212121aa",
		"statusBar.background": "#21212166",
		"panel.background": "#21212166",
		"list.activeBackground": "#21212166",
		"list.inactiveBackground": "#21212166",
		"button.background": "#21212166",
		"terminal.background": "#21212166",
		"toolbar.activeBackground": "#21212166",
		"badge.background": "#21212166",
		"menu.background": "#21212166",
		"toolbar.hoverBackground": "#21212166",
		"breadcrumb.background": "#21212166",
		"tab.hoverBackground": "#21212166",
		"editorPane.background": "#21212166",
		"activityBarBadge.background": "#21212166",
		"breadcrumbPicker.background": "#21212166",
		"activityBar.activeBackground": "#21212166",
		"titleBar.inactiveBackground": "#21212166",
		"sideBar.dropBackground": "#21212166",
		
    },
    "workbench.colorTheme": "Material Theme Darker",
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "window.menuBarVisibility": "hidden",
    "editor.smoothScrolling": true,
    "clangd.path": "/usr/bin/clangd",
    "editor.renderWhitespace": "none",
    "files.enableTrash": false,
    "explorer.confirmDelete": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/main": true,
        "**/*.o": true,
		"**/core": true,
		"**/Cargo.lock": true,
		"**/target": true,
    },
    "materialTheme.accent": "Bright Teal",
    "editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"rust-analyzer.checkOnSave.enable": true,
	"editor.showUnused": false,
	"rust-analyzer.diagnostics.enable": false,
	"[rust]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.showUnused": false,
	},
	"rust-analyzer.cargo.target": "x86_64-unknown-linux-gnu",
	"rust-analyzer.checkOnSave.allTargets": false,
	"editor.fontFamily": "'Hack', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
	"glsllint.additionalStageAssociations": { 
		"vsh": "vert",
		"fsh": "frag",
	},
	"files.associations": {
		"*.fsh": "glsl",
		"*.vsh": "glsl",
		"*.h": "c"
	},
	"workbench.startupEditor": "none",
	"editor.minimap.enabled": false,
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.vertical": "hidden",
	
}